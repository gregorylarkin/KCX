<div class="row">
  <div class="span12">
    <h2>New User</h2>
<div class="notice"><%= notice %></div>

<%= form_tag(users_url, method: 'post') do %>


  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>

  <div>
    <%= label_tag :phone %><br />
    <%= text_field_tag :phone %>
  </div>

  <div>
    <%= submit_tag "Create User" %>
  </div>
<% end %>
