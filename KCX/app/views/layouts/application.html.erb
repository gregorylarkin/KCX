<!DOCTYPE html>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>
 <html>
 <head>
         <meta charset="utf-8">
         <title>KCX</title>
         <link rel="stylesheet" href="http://flip.hr/css/bootstrap.min.css">
 </head>

 <body>
   <div class="container">
           <div class="navbar navbar-static-top">
            <div class="navbar-inner">

              <a class="brand">Kellogg Costume Exchange</a>
           <ul class="nav">
              <li class="active"><a href="/costumes">Costumes</a></li>

              <li class="active">
                <a href="/themes">Themes</a>
              </li>
              <% if session["user_id"].present? %>
                <li class="active">
                  <a href="/logout">Sign Out</a>
                </li>
                <li>
                  <a class="brand"> </a>
                </li>
                <li>
                <p style="text-align: right;">
                  <a class="brand">Signed in as <%= User.find_by_id(session["user_id"]).name %>.</a>
                </p>
              </li>
              <% else %>
                <li class="active">
                  <a href="/users/new">Sign Up</a>
                </li>
                <li class="active">
                  <a href="/login">Login</a>
                </li>
              <% end %><br><br>


           </div>

           <div class="notice"><%= notice %></div>

                  <form class="navbar-search pull-left">
                    <input type="text" class="search-query" placeholder="Search">
                  </form>


  <%= yield %>

</body>
</html>

