<div class="row">
  <div class="span12">
    <h2>Themes</h2>
<div class="notice"><%= notice %></div>
<p><%= link_to 'Add a New Theme', new_theme_url %></p>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @themes.each do |theme| %>
    <tr>

      <td><%= link_to theme.name, theme_url(theme) %></td>
      <td>
      <%= link_to 'Edit', edit_theme_url(theme), :class => 'btn btn-mini' %>
      <%= button_to 'Destroy', theme_url(theme), method: 'delete', data: { confirm: "Do you really want to delete this theme?" }, :class => 'btn btn-mini btn-danger' %>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>

