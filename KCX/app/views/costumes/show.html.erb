<h1> <%= @costume.name %> Costume</h1>

<p>
	<b>Description</b>
	<%= @costume.description %>
</p>
<p>
	<b>Price</b>
	<%= @costume.price %>
</p>
<p>
	<b>Currency</b>
	<%= @costume.currency %>
</p>
<p>
	<b>Themes it works for</b>
	<%= Theme.find_by_id(@costume.theme_id).name %>
</p>
<p>
  <b>Owner</b>
  <%= User.find_by_id(@costume.user_id).name %>
</p>

<p>
  <b>Contact the Owner:</b>
  <address>
  <a href="mailto: <%= User.find_by_id(@costume.user_id).email %>"><%= User.find_by_id(@costume.user_id).email %></a>
  </address>
</p>

<p>
  <b>Owner Phone #:</b>
  <%= User.find_by_id(@costume.user_id).phone %>
</p>
