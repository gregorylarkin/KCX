<h1> <%= @costume.name %> Costume</h1>

<%= image_tag(@costume.image_remote_url, :size => "250x250") %>

<p>
	<b>Description</b>
	<%= @costume.description %>
</p>
<p>
	<b>Price</b>
	<%= @costume.price %>
</p>
<p>
	<b>Currency</b>
	<%= @costume.currency %>
</p>
<p>
	<b>Themes it works for</b>

  <% @costume.themes.each do |f| %>
  <li><%= f.name %></li>

  <% end %>



</p>
<p>
  <b>Owner</b>
  <%= @costume.user.name %>
</p>

<p>
  <b>Contact the Owner:</b>
  <li><address>
  <a href="mailto: <%= @costume.user.email %>"><%= @costume.user.email %></a>
  </address></li>
</p>

<p>
  <li>Phone #:</b>
  <%= @costume.user.phone %></li>
</p>
