<div class="row">
  <div class="span12">
<h2>Add a New Costume</h2>

<%= form_tag "/costumes", :html => {:multipart => true} do %>
 <p>
    <%= label_tag :name, "Costume Name" %>
    <%= text_field_tag :name, "", size: 80, placeholder: "Costume name..." %>
  </p>
  <p>
    <%= label_tag :description, "Description" %>
    <%= text_field_tag :description, "", size: 80, placeholder: "Enter costume description..." %>
  </p>

  <p>
    <%= label_tag :price, "Price" %>
    <%= number_field_tag :price, value = nil, options = {} %>
  </p>
  <p>
    <%= label_tag :currency, "Currency" %>
    <%= text_field_tag :currency, "", size: 80, placeholder: "Are we talking $? Beer? IOUs? You decide..." %>
  </p>
    <p>
    <%= label_tag :image_remote_url, "Enter Image URL" %>
    <%= text_field_tag :image_remote_url, "", size:80 %>
  </p>


<%= label_tag :theme_id, "Themes it goes with" %>
<% Theme.all.each do |theme| -%>
  <div>
    <%= check_box_tag :theme_ids, theme.id, @costume.themes.include?(theme), :name =>'costume[theme_ids][]'  -%>
    <%= label_tag :theme_ids, theme.name -%>
  </div>

  <% end %>

 <div>
  <%= submit_tag "Submit"-%>
 </div>
 <%end%>



